{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "lib": [
      "ESNext"
    ],
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "outDir": "dist",
    "sourceMap": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "rootDir": "./",
    "strictNullChecks": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "tests"
  ],
  "ts-node": {
    "swc": true
  }
}